<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="8dp"
    android:background="@color/bottomsheet_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <EditText
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background_light"
        android:gravity="center"
        android:hint="@string/title_hint"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:singleLine="true"
        android:layout_marginTop="40dp"
        android:textAllCaps="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@android:color/black"
        android:textColorHint="#d8d8d8"
        android:textCursorDrawable="@color/edit_search_text_cursor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/textDescription"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_background_light"
        android:gravity="top|left"
        android:hint="@string/description_hint"
        android:minHeight="250dp"
        android:paddingTop="15dp"
        android:inputType="textMultiLine"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textColorHint="#d8d8d8"
        android:textCursorDrawable="@color/edit_search_text_cursor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/buttonPlaceMarker"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_place_marker_background"
        android:elevation="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="50dp"
        android:text="@string/place_marker" />

</LinearLayout>